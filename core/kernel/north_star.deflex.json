{
  "version": "2024.07",
  "metrics": [
    {
      "id": "integrity",
      "description": "Integrity of artifacts, attestations, and audit logs.",
      "weight": 0.4,
      "thresholds": {
        "warning": 0.88,
        "critical": 0.72
      },
      "escalation_policy": "integrity_breach",
      "signals": [
        "attestation_failures",
        "checksum_mismatch",
        "tamper_alerts"
      ]
    },
    {
      "id": "reversibility",
      "description": "Success rate of rollbacks, snapshots, and state recovery.",
      "weight": 0.3,
      "thresholds": {
        "warning": 0.82,
        "critical": 0.65
      },
      "escalation_policy": "rollback_failure",
      "signals": [
        "rollback_attempts",
        "rollback_success",
        "rollback_failure"
      ]
    },
    {
      "id": "capability",
      "description": "Confidence that capability scopes can remain fully open.",
      "weight": 0.3,
      "thresholds": {
        "warning": 0.78,
        "critical": 0.55
      },
      "escalation_policy": "capability_lockdown",
      "signals": [
        "scope_expansions",
        "scope_revocations",
        "capability_incidents"
      ],
      "scope_reduction": {
        "warning_multiplier": 0.75,
        "critical_multiplier": 0.5,
        "minimum_optional": 0
      }
    }
  ],
  "escalation_policies": [
    {
      "id": "integrity_breach",
      "summary": "Freeze high-impact connectors until integrity is restored.",
      "actions": [
        "freeze_connector:writes",
        "trigger_forensics",
        "notify:red_team"
      ],
      "owners": [
        "security@noa.internal",
        "compliance@noa.internal"
      ],
      "response_time_minutes": 15
    },
    {
      "id": "rollback_failure",
      "summary": "Escalate to release engineering when reversibility degrades.",
      "actions": [
        "pause_deployments",
        "spin_isolated_sandbox",
        "notify:release_engineering"
      ],
      "owners": [
        "release@noa.internal"
      ],
      "response_time_minutes": 30
    },
    {
      "id": "capability_lockdown",
      "summary": "Shrink capability scopes and require manual approvals.",
      "actions": [
        "restrict_optional_capabilities",
        "increase_audit_frequency",
        "notify:operations"
      ],
      "owners": [
        "operations@noa.internal"
      ],
      "response_time_minutes": 10
    }
  ],
  "defaults": {
    "compliance_contact": "trust@noa.internal",
    "min_sampling_window": "PT15M"
  }
}
