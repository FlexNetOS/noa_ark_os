# Example environment for NOA ARK OS development.
# Copy to .env and adjust as needed. Values favor offline/local defaults.

# Offline-first execution keeps network usage disabled unless explicitly opted-in.
OFFLINE_FIRST=true
ONLINE_GITHUB_MODE=false

# AI routing
AI_PROVIDER=llama.cpp
LLAMA_CPP_ENDPOINT=http://127.0.0.1:8080/v1

# UI + API integration
NEXT_PUBLIC_UI_API=http://localhost:8787
NEXT_PUBLIC_WORKFLOW_STREAM=ws://localhost:8787/ui/session
UPLOAD_BRIDGE_URL=http://localhost:8787
UPLOAD_TMP=./tmp/uploads

# CRC + UI drop configuration
NOA_UI_DROP_ROOT=./storage/drops

# Tooling defaults
BASE_REF=main
