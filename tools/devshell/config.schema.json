{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NOA Ark OS Devshell Config",
  "type": "object",
  "properties": {
    "pnpm": {
      "type": "object",
      "properties": {
        "requiredVersion": { "type": "string" },
        "defaultStoreDir": { "type": "string" },
        "aliases": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "env": {
      "type": "object",
      "properties": {
        "common": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
            "type": ["string", "array"],
            "items": { "type": "string" }
          }
        },
        "posix": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
            "type": ["string", "array"],
            "items": { "type": "string" }
          }
        },
        "windows": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "type": "string" },
              { "type": "array", "items": { "type": "string" } }
            ]
            "type": ["string", "array"],
            "items": { "type": "string" }
          }
        }
      },
      "additionalProperties": false
    },
    "rustAnalyzer": {
      "type": "object",
      "properties": {
        "checkCommand": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
