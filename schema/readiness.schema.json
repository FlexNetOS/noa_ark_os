{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ReadinessArtifact",
  "type": "object",
  "required": ["timestamp", "ui_port", "api_health"],
  "properties": {
    "timestamp": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}T"},
    "ui_port": {"type": ["string","number"]},
    "api_health": {
      "type": "object",
      "required": ["status", "code"],
      "properties": {
        "status": {"type": "string"},
        "code": {"type": ["string","number"]},
        "version": {"type": "string"},
        "version_hash": {"type": "string"},
        "build_timestamp": {"type": "string"},
        "uptime_seconds": {"type": ["number","integer"]},
        "feature_flags": {"type": "array", "items": {"type": "string"}}
      }
    },
    "raw_health_body": {"type": "string"}
  }
}
