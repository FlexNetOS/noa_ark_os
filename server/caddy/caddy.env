# Caddy Server Environment Configuration
# Source this file before running Caddy: source caddy.env
# Or add to ~/.bashrc for persistent configuration

# Vault upstream address (default: local Vault on port 8200)
export VAULT_UPSTREAM_ADDR="127.0.0.1:8200"

# Client CA certificate path for mTLS
export CLIENT_CA="/home/deflex/workspace/config/system/ca/client-ca.pem"

# Cloudflare API token for DNS-01 ACME challenge (if using public domains)
# export CLOUDFLARE_API_TOKEN="your-token-here"

# Email for ACME certificate notifications
export CADDY_ACME_EMAIL="you@example.com"

# Caddy admin API bind address
export CADDY_ADMIN="127.0.0.1:2019"

echo "âœ… Caddy environment variables loaded"
echo "   VAULT_UPSTREAM_ADDR=$VAULT_UPSTREAM_ADDR"
echo "   CLIENT_CA=$CLIENT_CA"
echo "   CADDY_ADMIN=$CADDY_ADMIN"
