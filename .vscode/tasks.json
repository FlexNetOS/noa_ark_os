{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Activate Portable Toolchain",
      "type": "shell",
      "command": ".\\server\\tools\\activate-cargo.ps1 -Silent; .\\server\\tools\\activate-node.ps1",
      "windows": {
        "command": ".\\server\\tools\\activate-cargo.ps1 -Silent; .\\server\\tools\\activate-node.ps1"
      },
      "linux": {
        "command": "echo 'Using Rust toolchain in devcontainer'; rustc --version || true; cargo --version || true"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
